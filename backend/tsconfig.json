{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [ 
    "node_modules",                                      /* Exclude the node_modules directory. */
    "prisma/seed.ts",                                    /* Exclude the seed script. */
  ],
}
